{% extends 'base.html.twig' %}

{% block title %}Liste des albums{% endblock %}

{% block body %}
<div class="col-12 pt-5 pb-3">
        <div
        class="table-responsive"
        >
        <h1>Liste des albums</h1>
        <table
            class="table table-striped"
            >
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Année</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for album in albums %}
                    <tr>
                        <td>{{ album.id }}</td>
                        <td>{{ album.name }}</td>
                        <td>{{ album.year }}</td>
                        <td>
                            <a href="{{ path('app_web_album_show', {'id': album.id}) }}">Afficher</a>
                            <a href="{{ path('app_web_album_edit', {'id': album.id}) }}">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun résultats</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
    <div class="col-12 ">
            <a href="{{ path('app_web_album_new') }}">Ajouter un album</a>
    </div>
{% endblock %}
