{% extends 'base.html.twig' %}

{% block title %}Liste des artistes{% endblock %}

{% block body %}
    <div class="col-12 pt-5 pb-3">
        <div
        class="table-responsive"
        >
        <h1>Liste des artistes</h1>
        <table
            class="table table-striped"
            >
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for artist in artists %}
                <tr>
                    <td>{{ artist.id }}</td>
                    <td>{{ artist.name }}</td>
                    <td>
                    <a href="{{ path('app_web_artist_show', {'id': artist.id}) }}">Afficher</a>
                    <a href="{{ path('app_web_artist_edit', {'id': artist.id}) }}">Modifier</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="3">Aucun r√©sultat</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
    <div class="col-12 ">
        <a href="{{ path('app_web_artist_new') }}">Ajouter un artiste</a>
    </div>
{% endblock %}
